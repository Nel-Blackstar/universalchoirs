<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Evenements"
            android:textSize="30dp"
            android:textStyle="bold" />
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_developer_board_black_24dp"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:shrinkColumns="1"
                    android:layout_height="match_parent">
                    <TableRow android:padding="10dp" android:paddingTop="10dp" android:layout_margin="2dp">
                        <TextView
                            android:layout_column="0"
                            android:text="@string/events_recorded"/>
                        <TextView
                            android:layout_gravity="right"
                            android:textColor="@color/colorBs"
                            android:text="230"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_column="1"/>
                    </TableRow>
                    <TableRow android:padding="10dp" android:layout_margin="2dp">
                        <TextView
                            android:layout_column="0"
                            android:text="@string/passed_events"/>
                        <TextView
                            android:textColor="@color/colorBs"
                            android:text="230"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_column="1"/>
                    </TableRow>
                    <TableRow android:padding="10dp" android:layout_margin="2dp">
                        <TextView
                            android:layout_column="0"
                            android:text="@string/future_events"/>
                        <TextView
                            android:textColor="@color/colorBs"
                            android:text="0"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_column="1"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <android.support.design.card.MaterialCardView
                android:id="@+id/add"
                android:layout_width="120dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_add_box_black_24dp"/>
            </android.support.design.card.MaterialCardView>
            <android.support.design.card.MaterialCardView
                android:id="@+id/list"
                android:layout_width="120dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_format_list_numbered_black_24dp"/>
            </android.support.design.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <android.support.design.card.MaterialCardView
                android:layout_width="120dp"
                android:id="@+id/sms"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_sms_black_24dp"/>
            </android.support.design.card.MaterialCardView>
            <android.support.design.card.MaterialCardView
                android:layout_width="120dp"
                android:id="@+id/stats"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_library_books_black_24dp"/>
            </android.support.design.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>