<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:shrinkColumns="2"
        >

    <TableRow  android:layout_width="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:gravity="center"
            android:text="Metier"
            android:textFontWeight="bold"
            android:textSize="30dp"
            android:layout_margin="10dp"/>
    </TableRow>
    <TableRow android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Intitulé"
            android:textColor="#f00"
            android:textStyle="bold" />

        <EditText
            android:layout_column="1"
            android:id="@+id/intituledata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:hint="Intituler"
            android:inputType="text"
            android:lineHeight="5dp" />
    </TableRow>
    <TableRow android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salaire"
            android:textColor="#f00"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/salairedata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:hint="Salaire"
            android:inputType="number"
            android:lineHeight="5dp" />
    </TableRow>
        <TableRow>
            <DatePicker
                android:layout_column="1"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"></DatePicker>
        </TableRow>
    <TableRow android:layout_margin="10dp">

        <RelativeLayout  android:layout_column="1"
            android:layout_marginLeft="15dp">

            <Button
                android:id="@+id/calculer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:text="Enregistrer" />
            <Button
                android:id="@+id/raz"
                android:layout_weight="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/calculer"
                android:text="RAZ"/>
        </RelativeLayout>
    </TableRow>
    <TableRow android:layout_margin="10dp">
        <TextView
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Résultat :"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </TableRow>
    </TableLayout>
</ScrollView>
