<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.blackstar.MkOpportunity.Mychoir.Forms.ChoirForm"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="1"
        >
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_column="0"
                android:text="@string/name"
                android:textStyle="bold" />

            <EditText
                android:gravity="center"
                android:layout_column="1"
                android:id="@+id/nomData"
                android:layout_marginLeft="10dp"
                android:hint="@string/name"
                android:inputType="text"
                android:lineHeight="5dp" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_column="0"
                android:text="@string/subname"
                android:textStyle="bold" />

            <EditText
                android:gravity="center"
                android:id="@+id/prenomData"
                android:layout_marginLeft="10dp"
                android:hint="@string/subname"
                android:layout_column="1"
                android:inputType="text"
                android:lineHeight="5dp" />
        </TableRow>
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_column="0"
                android:text="@string/contact"
                android:inputType="number"
                android:textStyle="bold" />

            <EditText
                android:gravity="center"
                android:id="@+id/contactData"
                android:layout_marginLeft="10dp"
                android:hint="@string/contact"
                android:layout_column="1"
                android:inputType="numberDecimal"
                android:lineHeight="5dp" />
        </TableRow>
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:text="@string/date_of_birth"
                android:textSize="10dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold" />
            <DatePicker
                android:id="@+id/naissanceData"
                android:layout_marginLeft="10dp"
                android:layout_column="1"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"></DatePicker>
        </TableRow>
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sexeData"
                android:spinnerMode="dropdown"
                android:autofillHints="@string/type"
                android:layout_marginLeft="10dp"
                android:layout_column="1" />
        </TableRow>
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:text="@string/desk"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/pupitreData"
                android:spinnerMode="dropdown"
                android:autofillHints="@string/desk"
                android:layout_marginLeft="10dp"
                android:layout_column="1" />
        </TableRow>
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:text="@string/role"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/roleData"
                android:spinnerMode="dropdown"
                android:autofillHints="@string/role"
                android:layout_marginLeft="10dp"
                android:layout_column="1" />
        </TableRow>
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_column="0"
                android:text="@string/profession"
                android:textStyle="bold" />

            <EditText
                android:gravity="center"
                android:id="@+id/professionData"
                android:layout_marginLeft="10dp"
                android:hint="@string/profession"
                android:layout_column="1"
                android:inputType="text"
                android:lineHeight="5dp" />
        </TableRow>
        <TableRow android:layout_margin="10dp">

            <RelativeLayout  android:layout_span="2"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp">

                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/success"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:layout_toRightOf="@id/reset"
                    android:text="@string/save" />
                <Button
                    android:id="@+id/reset"
                    android:textColor="#fff"
                    android:background="@color/colorBs"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:text="@string/reset"/>
            </RelativeLayout>
        </TableRow>
    </TableLayout>
</ScrollView>
