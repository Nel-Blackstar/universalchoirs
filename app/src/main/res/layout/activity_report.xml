<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportActivity">
   <ScrollView
       android:id="@+id/donnees"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <TableLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:shrinkColumns="1">
           <TableRow android:gravity="center">
               <TextView
                   android:textAlignment="center"
                   android:layout_width="match_parent"
                   android:layout_span="2"
                   android:layout_column="0"
                   android:layout_height="wrap_content"
                   android:text="@string/beginning_of_exercise"
                   android:textSize="20dp"
                   android:textStyle="bold" />
           </TableRow>
           <TableRow
               android:gravity="center"
               android:layout_marginLeft="10dp"
               android:layout_marginBottom="10dp"
               android:layout_marginTop="20dp">
               <DatePicker
                   android:id="@+id/dateDebut"
                   android:layout_marginLeft="10dp"
                   android:layout_column="0"
                   android:layout_span="2"
                   android:calendarViewShown="false"
                   android:datePickerMode="spinner"></DatePicker>
           </TableRow>
           <TableRow  android:gravity="center">
               <TextView
                   android:textAlignment="center"
                   android:layout_width="match_parent"
                   android:layout_column="0"
                   android:layout_height="wrap_content"
                   android:text="@string/end_of_exercise"
                   android:textSize="20dp"
                   android:layout_gravity="center_vertical"
                   android:textStyle="bold" />
           </TableRow>
           <TableRow
               android:gravity="center"
               android:layout_marginLeft="10dp"
               android:layout_marginBottom="10dp"
               android:layout_marginTop="20dp">
               <DatePicker
                   android:id="@+id/dateFin"
                   android:layout_marginLeft="10dp"
                   android:layout_column="0"
                   android:calendarViewShown="false"
                   android:datePickerMode="spinner"></DatePicker>
           </TableRow>
           <TableRow android:layout_marginTop="25dp" android:gravity="center">
               <Button
                   android:id="@+id/startReport"
                   android:textStyle="bold"
                   android:textSize="18dp"
                   android:layout_span="2"
                   android:layout_gravity="center"
                   android:padding="10dp"
                   android:textColor="@color/white"
                   android:background="@color/colorPrimary"
                   android:text="@string/generate_the_report"/>
           </TableRow>
       </TableLayout>
   </ScrollView>
    <LinearLayout
        android:id="@+id/resultats"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp">
            <TableLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="3">
                <TableRow android:layout_gravity="center" >
                    <TextView
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="@string/f_entrees"
                        android:layout_weight="30"/>
                    <TextView
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="@string/solde"
                        android:layout_weight="50"/>
                    <TextView
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="@string/f_sorties"
                        android:layout_weight="30"/>
                </TableRow>
                <TableRow android:layout_gravity="center" android:gravity="center" android:padding="10dp">
                    <android.support.design.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:outlineAmbientShadowColor="@color/colorBs"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="30"
                        >
                        <RelativeLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/entreImg"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:scaleX="0.5"

                                android:layout_centerHorizontal="true"
                                android:scaleY="0.5"
                                android:src="@drawable/ic_vertical_align_bottom_black_24dp"/>
                            <TextView
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:id="@+id/entree"
                                android:layout_width="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/entreImg"
                                android:text="2000000"/>
                        </RelativeLayout>
                    </android.support.design.card.MaterialCardView>
                    <android.support.design.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="50"
                        >
                        <RelativeLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/ratioImg"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:scaleX="0.5"
                                android:layout_centerHorizontal="true"
                                android:scaleY="0.5"
                                android:src="@drawable/ic_monetization_on_black_24dp"/>
                            <TextView
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:id="@+id/ratio"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ratioImg"
                                android:text="20000000000000"/>
                        </RelativeLayout>
                    </android.support.design.card.MaterialCardView>
                    <android.support.design.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="30"
                        >
                        <RelativeLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/sortieImg"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:scaleX="0.5"
                                android:scaleY="0.5"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_vertical_align_top_black_24dp"/>
                            <TextView
                                android:textStyle="bold"
                                android:layout_centerHorizontal="true"
                                android:textSize="18dp"
                                android:id="@+id/sortie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/sortieImg"
                                android:text="2000000"/>
                        </RelativeLayout>
                    </android.support.design.card.MaterialCardView>

                </TableRow>

            </TableLayout>
        </android.support.v7.widget.CardView>
        <ListView
            android:id="@+id/rapport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</LinearLayout>